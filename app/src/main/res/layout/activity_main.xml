<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="zxr.com.my.MainActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#00BF86"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/imagBack"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/liftts"/>

        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:paddingLeft="-10dp"
            android:textSize="16dp"
            android:text="我的布•水"
            />

        <ImageView
            android:id="@+id/imagAdd"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/add"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinNO"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="暂无生态景"
            android:textSize="@dimen/text_size_20"
            android:textColor="#00BF86"
            />


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/list_pager"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

</LinearLayout>
